<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:id="@+id/WidgetLayout"
    android:background="@drawable/widget"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <GridLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_now"
            android:layout_gravity="fill"
            android:text="@string/widget_lbl_now" />

        <TextView
            android:id="@+id/text_temp_now"
            android:layout_gravity="fill"
            android:text="TextView" />

        <ImageView
            android:id="@+id/img_now"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/weather01d" />

        <TextView
            android:id="@+id/lbl_today"
            android:layout_gravity="fill"
            android:text="@string/widget_lbl_today" />

        <TextView
            android:id="@+id/text_temp_today"
            android:layout_gravity="fill"
            android:text="TextView" />

        <ImageView
            android:id="@+id/img_today"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/weather01d" />
    </GridLayout>
</LinearLayout>